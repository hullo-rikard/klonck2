<div class="body bg-dark vh-100">
  <main class="form-signin text-center">
    <form action="/u/login" method="POST">

        <h1 class="h3 mb-3 fw-normal"><img src="../../public/img/klonck_white.svg" alt="Klonck" class="w-75"></h1>

        <label for="username" class="visually-hidden">Email address</label>
        <input name="username" type="text" id="username" class="form-control" placeholder="Username" value="" required>

        <label for="inputPassword" class="visually-hidden">Password</label>
        <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Password" value="" required>

        <button class="w-100 btn btn-lg btn-primary" type="submit">LOGIN</button>
    </form>
    <p class="mt-3"><a href="/u/register">No account? Register here!</a></p>
    <%- include('./partials/flash') %>
  </main>
</div>