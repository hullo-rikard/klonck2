<%- include('components/header') %>

<div class="d-flex" style="height: 90vh;">
  <div class="col-10">
    <div class="container">
      <%- include('./partials/flash') %>
      <div class="section row p-2">
        <h2>Users</h2>

          <% users.forEach(user => { %>

          <div class="card col-4">
            <div class="card-body">
              <a href="/m/<%= user.username %>">
                <h5 class="card-title"><%=user.username%></h5>
              </a>
            </div>
          </div>
          <% }); %>

        <h2 class="mt-3">Rooms <a class="btn btn-success mt-auto" href="/r">Create a new room</a></h2>
        <% rooms.forEach(room => { %>

        <div class="card col-4">
          <div class="card-body">
            <a href="/r/<%= room.name %>">
              <h5 class="card-title"><%=room.name%></h5>
            </a>
            <p class="card-text"><%= room.description %></p>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
  <div class="col-2"><%#- include('./components/sidebar') %></div>
</div>